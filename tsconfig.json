{
  "compilerOptions": {
    "target": "ESNext",
    "resolveJsonModule": true,
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "types": ["bun-types"],
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
